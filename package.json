{
	"name": "dhalsim",
	"version": "1.1.0",
	"description": "Browser automation for llmist agents using Camoufox anti-detect browser",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"llmist": {
		"gadgets": "./dist/index.js",
		"factory": "./dist/index.js",
		"subagents": {
			"BrowseWeb": {
				"entryPoint": "./dist/index.js",
				"export": "Dhalsim",
				"description": "Browse websites and accomplish tasks autonomously",
				"uses": [
					"Navigate",
					"Click",
					"Screenshot",
					"GetFullPageContent",
					"Fill"
				],
				"defaultModel": "sonnet",
				"maxIterations": 15
			}
		},
		"presets": {
			"all": "*",
			"subagent": [
				"BrowseWeb"
			],
			"readonly": [
				"Navigate",
				"Screenshot",
				"GetFullPageContent",
				"ListPages"
			],
			"minimal": [
				"Navigate",
				"Screenshot",
				"GetFullPageContent"
			]
		},
		"session": {
			"factory": "getSessionManager",
			"type": "browser"
		}
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node --external playwright-core --external camoufox-js --external chromium-bidi --external electron --external llmist && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"test": "vitest run --no-file-parallelism",
		"precheck": "bun run lint && bun run typecheck && bun run test",
		"prepare": "test -n \"$CI\" || lefthook install",
		"postinstall": "test -n \"$PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD\" || node node_modules/camoufox-js/dist/__main__.js fetch"
	},
	"keywords": [
		"browser",
		"automation",
		"playwright",
		"llm",
		"agent",
		"web",
		"scraping"
	],
	"author": "Zbigniew Sobiecki",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zbigniewsobiecki/dhalsim.git"
	},
	"homepage": "https://github.com/zbigniewsobiecki/dhalsim#readme",
	"bugs": {
		"url": "https://github.com/zbigniewsobiecki/dhalsim/issues"
	},
	"files": [
		"dist",
		"dhalsim-icon.png",
		"LICENSE",
		"README.md"
	],
	"dependencies": {
		"camoufox-js": "github:zbigniewsobiecki/camoufox-js#16eb589",
		"sharp": "^0.34.5"
	},
	"optionalDependencies": {
		"better-sqlite3": "^11.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@llmist/testing": ">=9.2.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.3",
		"@types/node": "^20.12.7",
		"bun-types": "^1.3.2",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"lefthook": "^1.6.0",
		"llmist": ">=9.4.0",
		"semantic-release": "^25.0.2",
		"typescript": "^5.4.5",
		"vitest": "^4.0.15"
	},
	"peerDependencies": {
		"llmist": ">=9.4.0"
	}
}
