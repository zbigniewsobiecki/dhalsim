{
	"name": "webasto",
	"version": "0.1.0",
	"description": "Browser automation CLI powered by llmist with Playwright gadgets",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"webasto": "dist/cli.js"
	},
	"scripts": {
		"build": "bun build src/cli.ts --outdir dist --target node && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly",
		"dev": "bun run src/cli.ts",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"test": "bun test",
		"test:unit": "bun test --timeout 60000",
		"precheck": "bun run lint && bun run typecheck && bun run test:unit",
		"prepare": "lefthook install"
	},
	"keywords": [
		"browser",
		"automation",
		"playwright",
		"llm",
		"agent",
		"web",
		"scraping"
	],
	"author": "Zbigniew Sobiecki",
	"license": "MIT",
	"dependencies": {
		"camoufox-js": "^0.8.4",
		"chalk": "^5.6.2",
		"commander": "^12.1.0",
		"llmist": "file:../llmist",
		"playwright": "^1.49.1",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/node": "^20.12.7",
		"bun-types": "^1.3.2",
		"lefthook": "^1.6.0",
		"typescript": "^5.4.5"
	}
}
