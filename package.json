{
	"name": "webasto",
	"version": "0.1.0",
	"description": "Browser automation CLI powered by llmist with Camoufox anti-detect browser",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"webasto": "dist/cli.js"
	},
	"llmist": {
		"gadgets": "./dist/gadgets/index.js",
		"factory": "./dist/factory.js",
		"subagents": {
			"BrowseWeb": {
				"entryPoint": "./dist/subagents/browse-web.js",
				"export": "BrowseWeb",
				"description": "Browse websites and accomplish tasks autonomously",
				"uses": ["Navigate", "Click", "Screenshot", "GetFullPageContent", "Fill"],
				"defaultModel": "sonnet",
				"maxIterations": 15
			}
		},
		"presets": {
			"all": "*",
			"subagent": ["BrowseWeb"],
			"readonly": ["Navigate", "Screenshot", "GetFullPageContent", "ListPages"],
			"minimal": ["Navigate", "Screenshot", "GetFullPageContent"]
		},
		"session": {
			"factory": "getSessionManager",
			"type": "browser"
		}
	},
	"scripts": {
		"build": "bun build src/cli.ts --outdir dist --target node --external playwright-core --external camoufox-js --external chromium-bidi --external electron && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly",
		"dev": "bun run src/cli.ts",
		"dev:node": "bun run build && node dist/cli.js",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"test": "bun test",
		"test:unit": "bun test --timeout 60000",
		"precheck": "bun run lint && bun run typecheck && bun run test:unit",
		"prepare": "lefthook install",
		"postinstall": "rm -rf node_modules/camoufox-js/node_modules/better-sqlite3 2>/dev/null || true"
	},
	"keywords": [
		"browser",
		"automation",
		"playwright",
		"llm",
		"agent",
		"web",
		"scraping"
	],
	"author": "Zbigniew Sobiecki",
	"license": "MIT",
	"dependencies": {
		"better-sqlite3": "nounder/bun-better-sqlite3",
		"camoufox-js": "^0.8.4",
		"chalk": "^5.6.2",
		"commander": "^12.1.0",
		"llmist": "^2.6.0",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/node": "^20.12.7",
		"bun-types": "^1.3.2",
		"lefthook": "^1.6.0",
		"typescript": "^5.4.5"
	}
}
